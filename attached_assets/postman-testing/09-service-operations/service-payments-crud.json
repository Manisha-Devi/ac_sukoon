
{
  "info": {
    "name": "AC Sukoon - Service Payments CRUD",
    "description": "Test collection for Service Payment operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://script.google.com/macros/s/AKfycbzrDR7QN5eaQd1YSj4wfP_Sg8qlTg9ftMnI8PkTXRllCioVNPiTkqb5CmA32FPgYBBN6g/exec",
      "type": "string"
    },
    {
      "key": "service_payment_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Add Service Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Service payment added successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData.entryId).to.exist;",
              "    pm.collectionVariables.set('service_payment_id', jsonData.entryId);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"addServicePayment\",\n  \"date\": \"2024-01-15\",\n  \"serviceType\": \"Engine repair\",\n  \"serviceDetails\": \"Complete engine overhaul and maintenance\",\n  \"cashAmount\": 5000,\n  \"bankAmount\": 0,\n  \"totalAmount\": 5000,\n  \"submittedBy\": \"testdriver\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Get All Service Payments",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Service payments retrieved successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"getServicePayments\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Update Service Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Service payment updated successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"updateServicePayment\",\n  \"entryId\": \"{{service_payment_id}}\",\n  \"updatedData\": {\n    \"serviceType\": \"Brake service\",\n    \"serviceDetails\": \"Complete brake system repair and maintenance\",\n    \"totalAmount\": 7500\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Delete Service Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Service payment deleted successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"deleteServicePayment\",\n  \"entryId\": \"{{service_payment_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    }
  ]
}
