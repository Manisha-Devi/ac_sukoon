
{
  "info": {
    "name": "AC Sukoon - Other Payments CRUD",
    "description": "Test collection for Other Payment operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://script.google.com/macros/s/AKfycbzrDR7QN5eaQd1YSj4wfP_Sg8qlTg9ftMnI8PkTXRllCioVNPiTkqb5CmA32FPgYBBN6g/exec",
      "type": "string"
    },
    {
      "key": "other_payment_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Add Other Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Other payment added successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData.entryId).to.exist;",
              "    pm.collectionVariables.set('other_payment_id', jsonData.entryId);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"addOtherPayment\",\n  \"date\": \"2024-01-15\",\n  \"paymentDetails\": \"Office supplies\",\n  \"description\": \"Stationery and office equipment purchase\",\n  \"cashAmount\": 2000,\n  \"bankAmount\": 1500,\n  \"totalAmount\": 3500,\n  \"vendor\": \"ABC Stationery\",\n  \"submittedBy\": \"testdriver\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Get All Other Payments",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Other payments retrieved successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"getOtherPayments\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Update Other Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Other payment updated successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"updateOtherPayment\",\n  \"entryId\": \"{{other_payment_id}}\",\n  \"updatedData\": {\n    \"paymentDetails\": \"Updated office supplies\",\n    \"description\": \"Updated stationery and office equipment purchase\",\n    \"totalAmount\": 4000\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Delete Other Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Other payment deleted successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"deleteOtherPayment\",\n  \"entryId\": \"{{other_payment_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    }
  ]
}
