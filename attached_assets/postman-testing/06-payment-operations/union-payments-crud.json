
{
  "info": {
    "name": "06 - Union Payments CRUD",
    "description": "Complete testing for union payment operations"
  },
  "item": [
    {
      "name": "Add Union Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Union payment added successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('entryId');",
              "});",
              "",
              "// Store entryId for update/delete tests",
              "const jsonData = pm.response.json();",
              "if (jsonData.success && jsonData.entryId) {",
              "    pm.environment.set('union_payment_id', jsonData.entryId);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"addUnionPayment\",\n  \"date\": \"2024-01-18\",\n  \"unionName\": \"Transport Workers Union\",\n  \"cashAmount\": 500,\n  \"bankAmount\": 0,\n  \"totalAmount\": 500,\n  \"remarks\": \"Monthly union fees\",\n  \"submittedBy\": \"testdriver\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Get All Union Payments",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Union payments retrieved successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"getUnionPayments\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Update Union Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Union payment updated successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"updateUnionPayment\",\n  \"entryId\": \"{{union_payment_id}}\",\n  \"updatedData\": {\n    \"totalAmount\": 600,\n    \"remarks\": \"Monthly union fees with late penalty\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Delete Union Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Union payment deleted successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"deleteUnionPayment\",\n  \"entryId\": \"{{union_payment_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    }
  ]
}
