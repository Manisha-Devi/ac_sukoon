
{
  "info": {
    "name": "02 - Fare Receipts CRUD",
    "description": "Complete testing for daily fare receipt operations"
  },
  "item": [
    {
      "name": "Add Fare Receipt",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fare receipt added successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('entryId');",
              "});",
              "",
              "// Store entryId for update/delete tests",
              "const jsonData = pm.response.json();",
              "if (jsonData.success && jsonData.entryId) {",
              "    pm.environment.set('fare_receipt_id', jsonData.entryId);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"addFareReceipt\",\n  \"date\": \"2024-01-15\",\n  \"route\": \"Ghuraka to Bhaderwah\",\n  \"cashAmount\": 200,\n  \"bankAmount\": 300,\n  \"totalAmount\": 500,\n  \"submittedBy\": \"testdriver\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Get All Fare Receipts",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fare receipts retrieved successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"getFareReceipts\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Update Fare Receipt",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fare receipt updated successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"updateFareReceipt\",\n  \"entryId\": \"{{fare_receipt_id}}\",\n  \"updatedData\": {\n    \"route\": \"Bhaderwah to Pul Doda\",\n    \"totalAmount\": 600\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Delete Fare Receipt",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fare receipt deleted successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"deleteFareReceipt\",\n  \"entryId\": \"{{fare_receipt_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    }
  ]
}
