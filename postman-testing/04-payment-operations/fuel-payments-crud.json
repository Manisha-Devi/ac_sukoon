
{
  "info": {
    "name": "04 - Fuel Payments CRUD",
    "description": "Complete testing for fuel payment operations"
  },
  "item": [
    {
      "name": "Add Fuel Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fuel payment added successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('entryId');",
              "});",
              "",
              "// Store entryId for update/delete tests",
              "const jsonData = pm.response.json();",
              "if (jsonData.success && jsonData.entryId) {",
              "    pm.environment.set('fuel_payment_id', jsonData.entryId);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"addFuelPayment\",\n  \"date\": \"2024-01-16\",\n  \"stationName\": \"HP Petrol Pump Bhaderwah\",\n  \"fuelType\": \"Diesel\",\n  \"quantity\": 50,\n  \"ratePerLiter\": 95.50,\n  \"cashAmount\": 2000,\n  \"bankAmount\": 2775,\n  \"totalAmount\": 4775,\n  \"submittedBy\": \"testdriver\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Get All Fuel Payments",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fuel payments retrieved successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"getFuelPayments\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Update Fuel Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fuel payment updated successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"updateFuelPayment\",\n  \"entryId\": \"{{fuel_payment_id}}\",\n  \"updatedData\": {\n    \"quantity\": 55,\n    \"totalAmount\": 5252.50,\n    \"remarks\": \"Updated quantity\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Delete Fuel Payment",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Fuel payment deleted successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"deleteFuelPayment\",\n  \"entryId\": \"{{fuel_payment_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    }
  ]
}
