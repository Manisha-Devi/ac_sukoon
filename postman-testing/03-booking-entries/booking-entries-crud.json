
{
  "info": {
    "name": "03 - Booking Entries CRUD",
    "description": "Complete testing for special booking entries operations"
  },
  "item": [
    {
      "name": "Add Booking Entry",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Booking entry added successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('entryId');",
              "});",
              "",
              "// Store entryId for update/delete tests",
              "const jsonData = pm.response.json();",
              "if (jsonData.success && jsonData.entryId) {",
              "    pm.environment.set('booking_entry_id', jsonData.entryId);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"addBookingEntry\",\n  \"bookingDetails\": \"Wedding booking from Bhaderwah to Jammu\",\n  \"dateFrom\": \"2024-01-20\",\n  \"dateTo\": \"2024-01-22\",\n  \"cashAmount\": 5000,\n  \"bankAmount\": 10000,\n  \"totalAmount\": 15000,\n  \"submittedBy\": \"testdriver\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Get All Booking Entries",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Booking entries retrieved successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "    pm.expect(jsonData).to.have.property('data');",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"getBookingEntries\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Update Booking Entry",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Booking entry updated successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"updateBookingEntry\",\n  \"entryId\": \"{{booking_entry_id}}\",\n  \"updatedData\": {\n    \"bookingDetails\": \"Updated wedding booking to Delhi\",\n    \"totalAmount\": 18000\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    },
    {
      "name": "Delete Booking Entry",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Booking entry deleted successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"action\": \"deleteBookingEntry\",\n  \"entryId\": \"{{booking_entry_id}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}",
          "host": ["{{base_url}}"]
        }
      }
    }
  ]
}
